<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.dicraft.myblog.dao.MemoryDao">

    <!--查询所有记忆-->
    <select id="listMemory" resultType="cn.dicraft.myblog.entity.Memory">
        select * from myblog.t_memory order by t_memory.id desc
    </select>

    <!--添加记忆-->
    <insert id="saveMemory" parameterType="cn.dicraft.myblog.entity.Memory">
        insert into myblog.t_memory (picture_address,create_time,memory)
        values (#{pictureAddress},#{createTime},#{memory})
    </insert>

    <!--根据id查询照片-->
    <select id="getMemory" resultType="cn.dicraft.myblog.entity.Memory">
        select * from myblog.t_memory p where p.id = #{id}
    </select>

    <!--编辑修改相册-->
    <update id="updateMemory" parameterType="cn.dicraft.myblog.entity.Memory">
        update myblog.t_memory
        set picture_address = #{pictureAddress}, memory = #{memory}
        where id = #{id};
    </update>

    <!--删除照片-->
    <delete id="deleteMemory" >
        delete from myblog.t_memory where id = #{id}
    </delete>

</mapper>
